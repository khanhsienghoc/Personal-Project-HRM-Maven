<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<suite name="HRM Test Suite" parallel="false">
    <listeners>
        <listener class-name="io.qameta.allure.testng.AllureTestNg"/>
        <listener class-name="reportConfigs.MethodListener"/>
        <listener class-name="reportConfigs.AllureTestListener"/>
        <listener class-name="retryConfigs.RetryListener"/>
    </listeners>

    <parameter name="browser" value="chrome"/>
    <parameter name="environment" value="test"/>
        <test name="Admin Tests">
            <groups>
                <run>
                    <include name ="admin"/>
                </run>
            </groups>
            <packages>
                <package name="admin"></package>
            </packages>
        </test>
    <test name="Employee Tests">
        <groups>
            <run>
                <include name="createEmployee"/>
                <include name="employee"/>
            </run>
        </groups>
        <packages>
            <package name="common"/>
            <package name="employee"></package>
        </packages>
    </test>
</suite>