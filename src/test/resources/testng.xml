<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<suite name="HRM Test Suite" parallel="false">
    <listeners>
        <listener class-name="io.qameta.allure.testng.AllureTestNg"/>
        <listener class-name="reportConfigs.MethodListener"/>
        <listener class-name="reportConfigs.AllureTestListener"/>
    </listeners>

    <parameter name="browser" value="chrome"/>
    <parameter name="environment" value="test"/>

    <test name="Admin Tests">
        <classes>
            <class name="admin.User_01_Admin_Login"/>
            <class name="admin.User_02_Admin_ForgotPassword"/>
            <class name="admin.User_03_Admin_Add_New_Employee"/>
        </classes>
    </test>

    <test name="Employee Tests">
        <classes>
            <class name="common.Common_Employee_Login"/>
            <class name="employee.User_01_Employee_Login"/>
            <class name="employee.User_02_Employee_Edit_PersonalDetails"/>
        </classes>
    </test>
</suite>